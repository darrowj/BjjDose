<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jasondarrow.bjjdose.DoseActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_dose">

    <TextView
        android:id="@+id/labal_title"
        android:layout_width="51dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Title:"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/text_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title: " />

    <Spinner
        android:id="@+id/spinner_dose_category"
        android:layout_width="354dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintStart_toStartOf="@+id/labal_title"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <Spinner
        android:id="@+id/spinner_dose_engagement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_dose_category"
        app:layout_constraintStart_toStartOf="@+id/spinner_dose_category"
        app:layout_constraintTop_toBottomOf="@+id/spinner_dose_category" />

    <Spinner
        android:id="@+id/spinner_dose_startPosture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_dose_engagement"
        app:layout_constraintStart_toStartOf="@+id/spinner_dose_engagement"
        app:layout_constraintTop_toBottomOf="@+id/spinner_dose_engagement" />

    <Spinner
        android:id="@+id/spinner_dose_offensivePosition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_dose_startPosture"
        app:layout_constraintStart_toStartOf="@+id/spinner_dose_startPosture"
        app:layout_constraintTop_toBottomOf="@+id/spinner_dose_startPosture" />

    <Spinner
        android:id="@+id/spinner_dose_guard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_dose_offensivePosition"
        app:layout_constraintStart_toStartOf="@+id/spinner_dose_offensivePosition"
        app:layout_constraintTop_toBottomOf="@+id/spinner_dose_offensivePosition" />

    <Spinner
        android:id="@+id/spinner_dose_sweep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_dose_guard"
        app:layout_constraintStart_toStartOf="@+id/spinner_dose_guard"
        app:layout_constraintTop_toBottomOf="@+id/spinner_dose_guard" />

    <Spinner
        android:id="@+id/spinner_dose_submission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_dose_sweep"
        app:layout_constraintStart_toStartOf="@+id/spinner_dose_sweep"
        app:layout_constraintTop_toBottomOf="@+id/spinner_dose_sweep" />

    <EditText
        android:id="@+id/multitext_dose_description"
        android:layout_width="368dp"
        android:layout_height="66dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/spinner_dose_submission"
        app:layout_constraintStart_toStartOf="@+id/spinner_dose_submission"
        app:layout_constraintTop_toBottomOf="@+id/spinner_dose_submission" />

    <CheckBox
        android:id="@+id/checkBox_dose_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Make Public?"
        app:layout_constraintEnd_toEndOf="@+id/multitext_dose_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multitext_dose_description" />

    <EditText
        android:id="@+id/text_title"
        android:layout_width="308dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
